@using BizLand.Models;
@model List<TeamMember>


<div class="col-12">
    <div class="bg-secondary rounded h-100 p-4">
        <a asp-action="Create" asp-controller="teammember" asp-area="BizAdmin" class="btn btn-success">Create Team Member</a>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">Image</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Profession</th>
                        <th scope="col">Setting</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">1</th>
                            <td><img src="~/assets/img/team/@item.ImageUrl" style=width:50px></td>
                            <td>@item.Name</td>
                            <td>@item.Surname</td>
                            <td>@item.Profession</td>
                            <td>
                                <a asp-action="Update" asp-controller="teammember" asp-area="BizAdmin" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
                                <a asp-action="Delete" asp-controller="teammember" asp-area="BizAdmin" asp-route-id="@item.Id" class="btn btn-primary">Delete</a>


                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>